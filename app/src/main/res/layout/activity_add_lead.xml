        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/interestTitle"
            android:textColor="#5260b1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="10dp">

            <Spinner
                android:id="@+id/activity_add_lead_sp_interest_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background" />

            <Spinner
                android:id="@+id/activity_add_lead_sp_interest_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background" />

            <EditText
                android:id="@+id/activity_add_lead_et_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/rateHint" />

            <EditText
                android:id="@+id/activity_add_lead_et_quantiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/quantityHint"
                android:inputType="number" />

            <EditText
                android:id="@+id/activity_add_lead_et_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:enabled="false"
                android:hint="@string/totalHint" />

            <EditText
                android:id="@+id/activity_add_lead_et_landarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/landarea" />

            <Spinner
                android:id="@+id/activity_add_lead_sp_customer_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background" />


            <Spinner
                android:id="@+id/activity_add_lead_sp_requirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background" />


            <Spinner
                android:id="@+id/activity_add_lead_sp_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background" />

            <Spinner
                android:id="@+id/activity_add_lead_sp_quat_hardcopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background" />




        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/bankDetailTitle"
            android:textColor="#5260b1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="10dp">

            <Spinner
                android:id="@+id/activity_add_lead_sp_bank_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background" />

            <EditText
                android:id="@+id/activity_add_lead_et_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/bankname" />

            <EditText
                android:id="@+id/activity_add_lead_et_branch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/branchname" />



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/appointTitle"
            android:textColor="#5260b1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/appointSubTitle" />

            <EditText
                android:id="@+id/activity_add_lead_et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:focusable="false"
                android:hint="@string/dateHint"
                android:inputType="date" />

            <EditText
                android:id="@+id/activity_add_lead_et_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:focusable="false"
                android:hint="@string/timeHint"
                android:inputType="time" />

            <EditText
                android:id="@+id/activity_add_lead_et_startwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:focusable="false"
                android:hint="@string/dateStartWorkHint"
                android:inputType="date" />

            <EditText
                android:id="@+id/activity_add_lead_et_closelead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:focusable="false"
                android:hint="@string/dateCloseLeadHint"
                android:inputType="date" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/additionalTitle"
            android:textColor="#5260b1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/activity_add_lead_et_cust_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:gravity="top|start"
                android:hint="@string/custReqHint"
                android:inputType="textMultiLine"
                android:lines="4" />

           <!-- <Spinner
                android:id="@+id/activity_add_lead_sp_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background">

            </Spinner>

            <Spinner
                android:id="@+id/activity_add_lead_sp_business_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background">

            </Spinner>-->
        </LinearLayout>

