<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.praveenbhati.agrovision.AddLeadActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/contact_title"
            android:textColor="#5260b1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/activity_add_lead_et_person_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="@string/firstNameHint"
                android:inputType="text">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/activity_add_lead_et_person_middlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="@string/middleNameHint"
                android:layout_marginTop="5dp"
                android:inputType="text">


            </EditText>

            <EditText
                android:id="@+id/activity_add_lead_et_person_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="5dp"
                android:hint="@string/lastNameHint"
                android:inputType="text">


            </EditText>

            <EditText
                android:id="@+id/activity_add_lead_et_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/companyHint"
                android:inputType="text" />

            <Spinner
                android:id="@+id/activity_add_lead_sp_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background" />


            <EditText
                android:id="@+id/activity_add_lead_et_mob_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/mobileHint"
                android:inputType="number"
                android:maxLength="10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/mobileTitle" />

            <EditText
                android:id="@+id/activity_add_lead_et_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/phoneHint"
                android:inputType="phone" />

            <EditText
                android:id="@+id/activity_add_lead_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/emailHint"
                android:inputType="textEmailAddress" />


            <EditText
                android:id="@+id/activity_add_lead_et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:gravity="top|start"
                android:hint="@string/addressHint"
                android:inputType="textMultiLine"
                android:lines="4" />

            <Spinner
                android:id="@+id/activity_add_lead_sp_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background">

            </Spinner>

            <Spinner
                android:id="@+id/activity_add_lead_sp_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background">

            </Spinner>

            <Spinner
                android:id="@+id/activity_add_lead_sp_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background">

            </Spinner>

            <Spinner
                android:id="@+id/activity_add_lead_sp_taluka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background">

            </Spinner>


            <Spinner
                android:id="@+id/activity_add_lead_sp_village"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background">

            </Spinner>


<!--
            <EditText
                android:id="@+id/activity_add_lead_et_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/pincodeHint"
                android:inputType="number"
                android:maxLength="6" />
