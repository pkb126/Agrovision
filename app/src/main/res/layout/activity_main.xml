<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.praveenbhati.agrovision.MainActivity">
    <ListView
        android:id="@+id/activity_main_lv_lead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    </ListView>

    <TextView
        android:id="@+id/activity_main_tv_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Leads found"
        android:textColor="@color/green"
        android:drawableTop="@android:drawable/ic_dialog_alert"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:gravity="center"/>
</RelativeLayout>
